<h1>Posts</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Texto</th>
      <th>Html</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.titulo %></td>
        <td><%= post.texto_md %></td>
        <td class="col-md-1"><%= link_to 'Ver', post, class: 'btn btn-primary' %></td>
        <td class="col-md-1"><%= link_to 'Editar', edit_post_path(post), class: 'btn btn-warning' %></td>
        <td class="col-md-1"><%= link_to 'Excluir', post, method: :delete, data: { confirm: 'Você está certo disto?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Post', new_post_path , class: 'btn btn-success'%>
